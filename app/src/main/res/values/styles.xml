<resources>
    <!-- 对话框 -->
    <style name="dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!-- <item name="android:backgroundDimEnabled">false</item> -->
    </style>


    <!-- 没有标题的Activity -->
    <style name="Theme.NoTitle" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <!--  Activity的切换动画 ，OpenEnter是被打开的Activity进来，CloseExit是被打开的Activity退出；
    CloseEnter是被覆盖的Activity不被覆盖，OpenExit是被覆盖的Activity被覆盖    -->
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    </style>

    <!-- 弹出的pop的动画 -->
    <style name="PopupAnimationDown" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter_down</item>
        <item name="android:windowExitAnimation">@anim/popup_exit_down</item>
    </style>

    <!-- TabLayout的文字style -->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/font_size_5</item>
    </style>

    <!-- TabLayout的通用style -->
    <style name="TabLayoutCommonStyle">
        <item name="android:background">@color/white</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/holo_orange_dark</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/holo_red_light</item>
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
        <item name="tabTextColor">@color/percent_70_pink_color</item>
    </style>
</resources>
